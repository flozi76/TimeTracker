<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <Button
        android:text="Track current location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnTrackcCurrentLocation" />
    <Button
        android:text="Start Location Listener"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStartLocationListener" />
    <Button
        android:text="Stop Location Listener"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnStopLocationListener" />
    <Button
        android:text="Show Log Entries"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowLogEntries" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextLocation" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ListLocations"
        android:layout_marginBottom="0.0dp" />
</LinearLayout>